    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "UserLoginInput": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "E-mail do usuário"
                    },
                    "password": {
                        "type": "string",
                        "description": "Senha do usuário"
                    }
                }
            },
            "UserLoginSuccess": {
                "type": "object",
                "properties": {
                    "user": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Nome do usuário"
                            },
                            "username": {
                                "type": "string",
                                "description": "Nick do usuário"
                            },
                            "email": {
                                "type": "string",
                                "description": "E-mail do usuário"
                            },
                            "type": {
                                "type": "string",
                                "description": "Tipo do usuário"
                            }
                        }
                    },
                    "token": {
                        "type": "string",
                        "description": "Token JWT de autenticação"
                    }
                }
            },
            "UserLoginError": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "string",
                        "description": "error"
                    },
                    "message": {
                        "type": "string",
                        "description": "E-mail ou senha incorretos."
                    }
                }
            },
            "UserRegisterInput": {
                "type": "object",
                "required": ["name", "username", "email", "password"],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome do usuário"
                    },
                    "username": {
                        "type": "string",
                        "description": "Nick do usuário"
                    },
                    "email": {
                        "type": "string",
                        "description": "E-mail do usuário"
                    },
                    "password": {
                        "type": "string",
                        "description": "Senha do usuário"
                    }
                }
            },
            "UserRegisteredSuccessfully": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "description": "Mensagem de usuário criado com sucesso"
                    }
                }
            },
            "UserRegisteredError": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string",
                        "description": "Mensagem de erro informando que o e-mail já está cadastrado"
                    }
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "ID do usuário"
                    },
                    "name": {
                        "type": "string",
                        "description": "Nome do usuário"
                    },
                    "email": {
                        "type": "string",
                        "description": "E-mail do usuário"
                    },
                    "username": {
                        "type": "string",
                        "description": "Nick do usuário"
                    },
                    "password": {
                        "type": "string",
                        "description": "Senha do usuário (encriptada)"
                    },
                    "type": {
                        "type": "string",
                        "description": "Tipo do usuário"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date",
                        "description": "Data de atualização do usuário"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date",
                        "description": "Data de criação do usuário"
                    }
                }
            },
            "UserUnauthorizedError": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "string",
                        "description": "error"
                    },
                    "message": {
                        "type": "string",
                        "description": "Unauthorized"
                    }
                }
            },
            "UserUpdateInput": {
                "type": "object",
                "required": ["name", "username", "email"],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome do usuário"
                    },
                    "username": {
                        "type": "string",
                        "description": "Nick do usuário"
                    },
                    "email": {
                        "type": "string",
                        "description": "E-mail do usuário"
                    }
                }
            },
            "ProfileCreateInput": {
                "type": "object",
                "required": ["cau", "phone", "dateOfBirth", "city", "state"],
                "properties": {
                    "cau": {
                        "type": "string",
                        "description": "CAU do usuário"
                    },
                    "phone": {
                        "type": "string",
                        "description": "Telefone do usuário"
                    },
                    "dateOfBirth": {
                        "type": "string",
                        "format": "date",
                        "description": "Data de nascimento do usuário"
                    },
                    "city": {
                        "type": "string",
                        "description": "Cidade do usuário"
                    },
                    "state": {
                        "type": "string",
                        "description": "Estado do usuário"
                    }
                }
            },
            "Profile": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "ID do perfil"
                    },
                    "cau": {
                        "type": "string",
                        "description": "CAU do usuário"
                    },
                    "phone": {
                        "type": "string",
