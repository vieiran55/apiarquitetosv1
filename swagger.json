    "paths": {
        "/users/auth": {
            "post": {
                "tag": ["users"],
                "summary": "Rota de Login",
                "description": "Rota utilizada para realizar login e obter um token JWT para autenticação",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserLoginInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Retorna as informações do usuário e o token JWT de autenticação",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserLoginSuccess"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Retorna um erro caso o e-mail ou a senha estejam incorretos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserLoginError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/u/register": {
            "post": {
                "tag": ["users"],
                "summary": "Rota de registro",
                "description": "Rota utilizada para realizar registro do usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserRegisterInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Retorna uma mensagem de usuário criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserRegisteredSuccessfully"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Retorna uma mensagem de erro caso o e-mail já tenha sido cadastrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserRegisteredError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users": {
            "get": {
                "tag": ["users"],
                "summary": "Lista todos os usuários",
                "description": "Rota para buscar e listar todos os usuários cadastrados",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "an authorization headers",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retorna uma lista com os usuários cadastrados",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Retorna uma mensagem de não autorizado, caso não seja passado o token de acesso nos headers da request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserUnauthorizedError"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/users/{id}": {
            "get": {
                "tag": ["users"],
                "summary": "Lista um usuário",
                "description": "Rota para buscar pelo ID e retorna um usuário cadastrado",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "an authorization headers",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retorna um objeto com os dados do usuário",
