        "/forgot-password": {
            "post": {
                "summary": "Recupera a senha do usuário",
                "description": "Rota para recuperação de senha do usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ForgotPasswordInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Retorna um objeto contendo uma mensagem de e-mail existente e o token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "description": "Mensagem de perfil deletado com sucesso"
                                        },
                                        "token": {
                                            "type": "string",
                                            "description": "Token para a recuperação da senha"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Retorna uma mensagem de e-mail não encontrado ou aviso para tentar novamente em alguns minutos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserUnauthorizedError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/update-password": {
            "put": {
                "summary": "Altera a senha do usuário",
                "description": "Rota para alteração de senha do usuário",
