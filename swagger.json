        "/projects/register": {
            "post": {
                "tag": ["projetcs"],
                "summary": "Rota de registro de projeto",
                "description": "Rota utilizada para realizar registrar um projeto",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "an authorization headers",
                        "required": true,
                        "type": "string"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "Nome do projeto"
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "Descrição do projeto"
                                    },
                                    "file": {
                                        "type": "file",
                                        "format": "binary",
                                        "description": "Arquivo a ser enviado (pdf, png, jpg, jpeg)"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Retorna uma mensagem de projeto registrado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserRegisteredSuccessfully"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Retorna uma mensagem de erro",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserRegisteredError"
                                }
                            }
