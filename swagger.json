                    "401": {
                        "description": "Retorna uma mensagem de não autorizado, caso não seja passado o token de acesso nos headers da request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserUnauthorizedError"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/users/update/{id}": {
            "put": {
                "tag": ["users"],
                "summary": "Atualiza um usuário",
